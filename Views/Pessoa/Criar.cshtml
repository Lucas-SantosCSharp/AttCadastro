@model AttCadastro.Models.Pessoa

@{
    ViewData["Title"] = "Cadastrar Pessoa";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4" style="width: 420px; border-radius: 20px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Cadastrar Pessoa</h3>
            <p class="text-muted">Preencha os campos abaixo</p>
        </div>

        <form asp-action="Criar" method="post">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label fw-semibold"></label>
                <input asp-for="Nome" class="form-control rounded-pill" placeholder="Digite o nome completo" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control rounded-pill" placeholder="Digite o email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Senha" class="form-label fw-semibold"></label>
                <input asp-for="Senha" type="password" class="form-control rounded-pill" placeholder="Digite a senha" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cargo" class="form-label fw-semibold"></label>
                <select asp-for="Cargo" class="form-select rounded-pill">
                    <option value="">Selecione um cargo</option>
                    <option>Administrador</option>
                    <option>SÃ­ndico</option>
                    <option>Morador</option>
                </select>
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-semibold">
                Salvar
            </button>

            <div class="text-center mt-3">
                <a asp-action="Index" class="text-decoration-none text-secondary fw-semibold">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
