@model IEnumerable<AttCadastro.Models.Pessoa>

@{
    ViewData["Title"] = "Lista de Pessoas";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Lista de Pessoas</h2>
        <a asp-action="Criar" class="btn btn-success rounded-pill px-4">
            <i class="bi bi-person-plus"></i> Nova Pessoa
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Cargo</th>
                    <th style="width:150px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pessoa in Model)
                {
                    <tr>
                        <td>@pessoa.Nome</td>
                        <td>@pessoa.Email</td>
                        <td>@pessoa.Cargo</td>
                        <td class="text-center">
                            <a asp-action="Editar" asp-route-id="@pessoa.Id" class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Excluir" asp-route-id="@pessoa.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">Nenhuma pessoa cadastrada ainda.</div>
    }
</div>
